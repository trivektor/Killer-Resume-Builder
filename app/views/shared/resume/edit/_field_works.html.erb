<div class="box_top"></div>
<div class="box">
	
	<div class="section_options">
		<div class="options_label">Options</div>
		
		<% section_mode = @hidden_fields.include?("field_works") ? "disabled" : "active" %>
		
	  <a class="enable_section" rel="field_works">Enable this section</a>
		<a class="disable_section" rel="field_works">Disable this section</a>

		<input type="hidden" class="section_mode" value="<%= section_mode %>" />
	</div>
	
	<%= render :partial => "shared/section_name_editor", :locals => {:section => "field_works"} %>
	
	<p>Links to your works (e.g. http://www.website.com)</p>
	
	<div class="clearfloat"></div>

	<%= f.fields_for :resume_field_work do |fw| %>
		<%= fw.text_area :field_works, :class => :markitup %>
	<% end %>
	
	<%= render :partial => 'shared/formatting_tips' %>

</div>
<div class="box_bottom"></div>