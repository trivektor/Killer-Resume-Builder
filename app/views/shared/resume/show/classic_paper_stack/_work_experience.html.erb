<div class="section_header_wrapper">
	<div class="section_header_right_end">
		<h2 class="section_header">
			<%= @section_names['work_experience'] %>
		</h2>
	</div>
</div>


<div id="resume_work_experience" class="section_details_wrapper">
	<ul>
		<% for exp in @resume.resume_work_experiences %>
			<li class="work_experience_item">
				<div class="left">
					<div class="organization_name"><%= exp.organization_name %></div>
					<p class="position_title"><%= exp.title %></p>
				</div>
				<p class="period">
					<%= exp.begin_date %> - <%= exp.end_date.empty? ? "present" : exp.end_date %>
				</p>
				<div class="clearfloat"></div>
				<div class="position_details">
					<%= RDiscount.new(exp.details).to_html.html_safe unless exp.details.blank? %>
				</div>
			</li>
    <% end %>
	</ul>
</div>