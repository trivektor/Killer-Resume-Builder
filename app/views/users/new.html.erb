<div id="signup_form">
	<div id="header_wrapper">
		<div id="header">
			<h1 id="app_logo"><a href="/">Killer Resume Builder</a></h1>
			<div id="login_link_wrapper">
				<span>Already have an account?</span>
				<%= link_to image_tag("resume/login.png", :alt => "Login", :id => "login"), login_path %>
			</div>
			<div class="clearfloat"></div>
		</div>
		<div id="header_nav_wrapper"></div>
	</div>
	<div id="signup_form_fields_wrapper">

		<div id="signup_form_fields">
			<h2>
				<%= image_tag "resume/joinUsHeader.png", :alt => "Join Us" %>
			</h2>
			
			<%= form_for(@user) do |f| %>
			
				<% if !@user.errors.empty? %>
				    <%= render :partial => "shared/form_errors", :locals => {:f => f} %>
				 <% end %>
			
				<div class="form_row">
					<%= f.label :username %>
					<%= f.text_field :username, :class => "textbox", :autocomplete => "off" %>
				</div>
				<div class="form_row">
					<%= f.label :email %>
					<%= f.text_field :email, :class => "textbox", :autocomplete => "off" %>
				</div>
				<div class="form_row">
					<%= f.label :password %>
					<%= f.password_field :password, :class => "textbox", :autocomplete => "off" %>
				</div>
				
				<div style="text-align: right;">
					<input type="image" alt="Submit" src="/images/resume/alrightLetsGoBtn.png" />
				</div>
			<% end %>
		
		</div>
	</div>
</div>
